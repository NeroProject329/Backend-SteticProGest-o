generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  phone     String?
  password  String
  createdAt DateTime @default(now())

  salon Salon?
}

model Salon {
  id        String   @id @default(cuid())
  name      String
  address   String?
  phone     String?
  logoUrl   String?
  createdAt DateTime @default(now())

  // ðŸ”¥ CONFIGURAÃ‡Ã•ES DE FUNCIONAMENTO
  openTime          String? // "09:00"
  closeTime         String? // "18:00"
  workingDays       Json? // [1,2,3,4,5]
  blockOutsideHours Boolean @default(false)

  ownerId String @unique
  owner   User   @relation(fields: [ownerId], references: [id])

  // âœ… Plano
  plan        String    @default("FREE")
  planStatus  String    @default("ACTIVE")
  planEndsAt  DateTime?
  trialEndsAt DateTime?

  services     Service[]
  clients      Client[]
  appointments Appointment[]

  cashCategories   CashCategory[]
  cashTransactions CashTransaction[]

  @@index([plan, planStatus])
}

model Service {
  id        String   @id @default(cuid())
  name      String
  category  String?
  price     Int // em centavos (ex: R$ 49,90 = 4990)
  durationM Int // duraÃ§Ã£o em minutos
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  salonId String
  salon   Salon  @relation(fields: [salonId], references: [id])

  appointments Appointment[]
}

model Client {
  id        String   @id @default(cuid())
  name      String
  phone     String
  instagram String?
  notes     String?
  createdAt DateTime @default(now())

  salonId String
  salon   Salon  @relation(fields: [salonId], references: [id])

  appointments Appointment[]
}

model Appointment {
  id        String   @id @default(cuid())
  startAt   DateTime
  endAt     DateTime
  status    String   @default("PENDENTE") // PENDENTE|CONFIRMADO|FINALIZADO|CANCELADO
  notes     String?
  createdAt DateTime @default(now())

  salonId String
  salon   Salon  @relation(fields: [salonId], references: [id])

  clientId String
  client   Client @relation(fields: [clientId], references: [id])

  serviceId String
  service   Service @relation(fields: [serviceId], references: [id])

  cashTransaction CashTransaction?

  @@index([salonId, startAt])
  @@index([salonId, clientId])
  @@index([salonId, serviceId])
}

enum CashType {
  IN
  OUT
}

enum CashSource {
  AUTO_APPOINTMENT
  MANUAL
}

model CashCategory {
  id        String    @id @default(cuid())
  name      String
  type      CashType? // opcional: se quiser travar categoria por IN/OUT
  createdAt DateTime  @default(now())

  salonId String
  salon   Salon  @relation(fields: [salonId], references: [id])

  transactions CashTransaction[]

  @@unique([salonId, name])
  @@index([salonId])
}

model CashTransaction {
  id     String     @id @default(cuid())
  type   CashType
  source CashSource @default(MANUAL)

  name        String
  occurredAt  DateTime
  amountCents Int

  notes     String?
  createdAt DateTime @default(now())

  salonId String
  salon   Salon  @relation(fields: [salonId], references: [id])

  categoryId String?
  category   CashCategory? @relation(fields: [categoryId], references: [id])

  // integraÃ§Ã£o com agenda (opcional, mas recomendado)
  appointmentId String?      @unique
  appointment   Appointment? @relation(fields: [appointmentId], references: [id])

  @@index([salonId, occurredAt])
  @@index([salonId, type])
  @@index([salonId, categoryId])
}
